@{
	Layout = "_LayoutPage";
}
@model User
<div role="main" class="main">

				<section class="page-header page-header-modern bg-color-light-scale-1 page-header-lg">
					<div class="container">
						<div class="row">
							<div class="col-md-12 align-self-center p-static order-2 text-center">
								<h1 class="font-weight-bold text-dark">Benimle İletişime Geçin</h1>
							</div>
							<div class="col-md-12 align-self-center order-1">
								<ul class="breadcrumb d-block text-center">
									<li><a href="/">Ana Sayfa</a></li>
									<li class="active">İletişim</li>
								</ul>
							</div>
						</div>
					</div>
				</section>

				<div class="container py-4">

					<div class="row mb-2">
						<div class="col">

							<h2 class="font-weight-bold text-7 mt-2 mb-0">İletişime Geç</h2>
							<p class="mb-4">Ayrıntıları sormaktan çekinmeyin, bütün sorularınızı bekliyorum!</p>

							<form asp-action="Iletisim" asp-controller="Home" method="post">
								@* Başarı ve hata mesajları *@
								@if (TempData["Success"] != null)
								{
									<div class="alert alert-success">@TempData["Success"]</div>
								}
								@if (TempData["Error"] != null)
								{
									<div class="alert alert-danger">@TempData["Error"]</div>
								}

								<div class="row">
									<div class="form-group col-lg-6">
										<label class="form-label mb-1 text-2">Ad Soyad</label>
										<input asp-for="name" class="form-control text-3 h-auto py-2" maxlength="100" required />
									</div>
									<div class="form-group col-lg-6">
										<label class="form-label mb-1 text-2">Email Adresi</label>
										<input name="email" type="email" class="form-control text-3 h-auto py-2" maxlength="100" required />
										@* Email verisi kaydedilmeyecekse, modelde tanımlı olmasına gerek yok. *@
									</div>
								</div>
								<div class="row">
									<div class="form-group col">
										<label class="form-label mb-1 text-2">Konu</label>
										<input asp-for="title" class="form-control text-3 h-auto py-2" maxlength="100" required />
									</div>
								</div>
								<div class="row">
									<div class="form-group col">
										<label class="form-label mb-1 text-2">Mesajınız</label>
										<textarea asp-for="message" class="form-control text-3 h-auto py-2" rows="5" maxlength="5000" required></textarea>
									</div>
								</div>
								<div class="row">
									<div class="form-group col">
										<input type="submit" value="Gönder" class="btn btn-primary btn-modern" />
									</div>
								</div>
							</form>

						</div>
					</div>
					<div class="row mb-5">
						<div class="col-lg-4">

							<div class="overflow-hidden mb-3">
					<h4 class="pt-5 mb-0 appear-animation" data-appear-animation="maskUp" data-appear-animation-delay="200" data-plugin-options="{'accY': -200}">İletişime  <strong>Geç</strong></h4>
							</div>
							<div class="overflow-hidden mb-3">
					<p class="lead text-4 mb-0 appear-animation" data-appear-animation="maskUp" data-appear-animation-delay="400" data-plugin-options="{'accY': -200}">Projeleriniz hakkında konuşmak veya sorularınızı yanıtlamak için buradayım.</p>
							</div>
							

						</div>
						<div class="col-lg-4 offset-lg-1 appear-animation" data-appear-animation="fadeIn" data-appear-animation-delay="800" data-plugin-options="{'accY': -200}">

				<h4 class="pt-5"> <strong>Bilgilerim</strong></h4>
							<ul class="list list-icons list-icons-style-3 mt-2">
@* 								<li><i class="fas fa-map-marker-alt top-6"></i> <strong>Address:</strong> 1234 Street Name, City Name</li>
 *@								<li><i class="fas fa-phone top-6"></i> <strong>Phone:</strong> +90 552 302 7671</li>
					<li><i class="fas fa-envelope top-6"></i> <strong>Email:</strong> <a href="efeesenol4471@gmail.com">efeesenol4471@gmail.com</a></li>
							</ul>

						</div>
						<div class="col-lg-3 appear-animation" data-appear-animation="fadeIn" data-appear-animation-delay="1000" data-plugin-options="{'accY': -200}">

							<h4 class="pt-5">Çalışma <strong>Saatlerim</strong></h4>
							<ul class="list list-icons list-dark mt-2">
								<li><i class="far fa-clock top-6"></i> İstediğiniz gün ve saatte ulaşabilirsiniz.</li>
								
							</ul>

						</div>
					</div>

				</div>

				

			</div>